\ProvidesPackage{titlepage}[2013/01/13 Page Title Package with footer and header]

%==========TITLE=========================
\newcommand*{\titleGM}{\begingroup % Create the command for including the title page in the document
\hbox{ % Horizontal box
\hspace*{0.2\textwidth} % Whitespace to the left of the title page
\rule{1pt}{\textheight} % Vertical line
\hspace*{0.05\textwidth} % Whitespace between the vertical line and title page text
\parbox[b]{0.75\textwidth}{ % Paragraph box which restricts text to less than the width of the page

{\noindent\huge\bfseries \documenttitle - \subtitle}\\[2\baselineskip] % Title
{\large \textit{\documentdesc}}\\[4\baselineskip] % Tagline or further description
{\Large \textsc{\authors}}\\[2\baselineskip]
{\large \textsc{\textit{\subauthors}}} % Author name

\vspace{0.5\textheight} % Whitespace between the title block and the publisher
{\noindent \revisiondate}\\[\baselineskip] 
}}
\endgroup}
%========================================

%============SUBTITLE?======================
\newcommand*{\subtitleGM}[1]{
\begingroup
\hbox{
\hspace*{0.25\textwidth}
\parbox[b]{0.75\textwidth}{
	\vspace*{0.4\textheight}
	{\noindent\huge\bfseries #1}\\[\baselineskip]
	{\large \textit{\documenttitle - \authors}}\\
	\noindent\rule{9cm}{0.4pt}\\[2\baselineskip]
}
}\endgroup}
%========================================
\newcommand{\subtitlepage}[1]{\begingroup
	\clearpage
	\thispagestyle{empty}
	\subtitleGM{#1}
	\clearpage
	\thispagestyle{fancy}
\endgroup}
%========================================

%==========HEADER & FOOTER===============
\RequirePackage{fancyhdr}
\pagestyle{fancy}
\fancyhf{}
\lhead{\documenttitle - \subtitle}
\rhead{\authors}
\fancyfoot[R]{\thepage}
\fancyfoot[L]{\revisiondate}
%========================================
\endinput